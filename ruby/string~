#!/usr/bin/env ruby

# Strings are made in Ruby using quotation marks
#
string = "Daniel"

# To find the length of a string and return it
#
len = 'Daniel'.length 

# To reverse a string and return it
#
rev = 'daniel'.reverse

# To convert a string to uppercase or lowercase
#
'daniel'.upcase
'DANIEL'.downcase

# In Ruby, we can chain methods together
#
puts 'Daniel'.reverse.upcase.downcase.upcase
